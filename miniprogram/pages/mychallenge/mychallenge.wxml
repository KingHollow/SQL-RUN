<!--pages/mychallenge/mychallenge.wxml-->

<view class="title">挑战列表</view>

<view class="container">
  <view class="content">
    <view wx:for="{{list}}" wx:key="index">

      <view class="content" catchtap="GotoChallenge" data-id="{{item.quesID}}" style="padding:2vh 2vh 2vh 2vh">
        <view class="content1">
          <view class="crname">被挑战者：{{item.cdname}}</view>
          <view class="name" space="emsp">挑战状态：</view>
          <view wx:if="{{item.state == '2'}}" class="answered">已回答</view>
          <view wx:elif="{{item.state == '1'}}" class="disanswered">待回答</view>
          <view wx:else="{{item.state == '0'}}" class="unchecked">待审核</view>
        </view>
        <text class="text">{{item.content}}</text>
      </view>
      <view class="line"></view>
    </view>
  </view>
</view>
