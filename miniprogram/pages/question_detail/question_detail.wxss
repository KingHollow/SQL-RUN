/* pages/question_detail/question_detail.wxss */
.title{
  height: 70px;
  width: 100%;
  font-size: larger;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight:bold;
  color:#42589a;
  margin-top:30rpx;
 }

 page{  
  height: 100%;  
  background-color: #F3F4F6;
} 

.topView{
  width:100%;
  height:48px;
  display:flex;

}
.topChild{
  width:50%;
  height:48px;
  text-align: center;
  line-height: 3.4;
  font-size:15px;
  color:#333333;
}
/*点击时按钮状态*/
.active{
  color:#88ADDF;
  border-bottom:2px solid #88ADDF;
}


page{  
  height: 100%;  
  background-color: #F3F4F6;
} 


 .line { 
  width: 100%; 
  height: 2px; 
  background-color: #88aedf6c;
  margin-top: 1px; 
 } 


 .container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  padding: 0; 
  box-sizing: border-box; 
  background-color: #f2f2f2
 } 

 .content{
  background-color: #fff; 
  
  width:85%;

  justify-items: center;
  display: flex;
  flex-direction: row;
  color: black;
  font-size: 20px;
  text-align: left;
  text-indent:2em;
 }

 .answer{
  background-color: #fff; 
  
  width:89%;

  justify-items: center;
  display: flex;
  flex-direction:column;
  color: black;
  font-size: 20px;
  
  
 }

 .text{
   font-size:  2.5vh;
   word-break: break-all;
   text-align: left;
  text-indent:2em;
  margin-top:5rpx;
  margin-bottom: 5rpx;
 }

 .subtitle{
  height: 70px;
  width: 100%;
  font-size: medium;
  display: flex;
  align-items: center;
  justify-content: center;
  
  color:#5e7dbd;
 }

 .width{
   width: 100%;
   
   justify-content: center;
   
   display: flex;
   flex-direction: row;

 }

 .name{
   margin-top: 5rpx;
  color: #88addf;
  font-size: 17px;
  text-align: left;
  text-indent:1em;
 }
 .result{
  display:flex; 
  flex-direction:row;
  
  justify-content: right;
  justify-items: right;
  float: right;

 }


.btn{
  width:50%;
  height:48px;
  text-align: center;
  line-height: 3.4;
  font-size:17px;
  color:#6d6666;
}
/*点击时按钮状态*/
.btn.active{
  color:#88ADDF;
  border-bottom:solid transparent;
}

.pass{
  width:100%;
  height:48px;
  text-align: right;
  margin-right: 10%;
  line-height: 3.4;
  font-size:17px;
  color:#13e263;
}

.nopass{
  width:100%;
  height:48px;
  text-align:right;
  margin-right: 10%;
  line-height: 3.4;
  font-size:17px;
  color:#e23c13;
}