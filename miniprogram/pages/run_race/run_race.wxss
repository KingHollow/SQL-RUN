/* pages/run_racet/run_racet.wxss */
page{
  width: 100%;
  height: 100%;
}

.title{
  height:10%;
  width:100%;
  font-size:x-large;
  display:flex;
  align-items:center;
  justify-content:center;
  font-weight:bold;
  color:#42589a;
}

.time-area{
  top: 3%;
  left: 3%;
  width: 120rpx;
  height: 120rpx;
  background-color: #88addf;
  border-radius: 100rpx;
  z-index: 10;
  position: fixed;
  opacity: 0.8;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sub-title{
  color: white;
  font-weight: 600;
}

.time{
  color: #cc2f13;
}

.runway{
  display: flex;
  align-items: center;
  justify-content: center;
}

.left{
  display: flex;
  flex-direction: row-reverse;
}

.right{
  display: flex;
  flex-direction: row;
}

.infoImg{
  width: 36%;
  height: 70%;
}

.count{
  width: 14%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: x-large;
}

.blank{
  height:450rpx;
}

.blank1{
  height: 580rpx;
}

.bottom{
  bottom:0;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.choose-area{
  bottom: 3%;
  width: 600rpx;
  height: 130rpx;
  background-color: #88addf;
  border-radius: 20rpx;
  z-index: 10;
  position: fixed;
  opacity: 0.8;
  display: flex;
  align-items: center; 
}

.level{
  margin-left: 60rpx;
  justify-content: center;
  display: flex;
  align-items: center; 
}

.diff-name{
  margin-left: 40rpx;
  margin-right:30rpx;
  font-weight: 600;
  color:white;
  writing-mode: vertical-lr;
}

.square{
  width: 80rpx;
  height: 80rpx;
  background-color: rgb(252, 249, 239);
  border-radius: 20rpx;
  color: #5e7dbd;
  font-weight: 600;
  font-size: larger;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.gap{
  width: 50rpx;
}

.gap1{
  width: 30rpx;
}

.tool-area{
  bottom: 16%;
  width: 600rpx;
  height: 130rpx;
  background-color: #88addf;
  border-radius: 20rpx;
  z-index: 9;
  position: fixed;
  opacity: 0.8;
  display: flex;
  align-items: center; 
}

.tool-name{
  margin-left: 40rpx;
  margin-right:30rpx;
  font-weight: 600;
  color:white;
  writing-mode: vertical-lr;
}

.pic-group{
  height: 420rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pic{
  width: 100rpx;
  height: 100rpx;
}

.comb{
  display: flex;
  align-items: center; 
}

.pic1{
  width: 80rpx;
  height: 80rpx;
}

.player{
  bottom: 50%;
  left: 150rpx;
  z-index: 9;
  position: fixed;
  width: 50%;
}

.people{
  width: 200rpx;
}

.rival{
  bottom: 50%;
  left: 430rpx;
  z-index: 9;
  position: fixed;
  width: 50%;
}