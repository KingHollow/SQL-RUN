/* pages/draft_detail/draft_detail.wxss */
.title{
  height:70px;
  width:100%;
  font-size:larger;
  display:flex;
  align-items:center;
  justify-content:center;
  font-weight:bold;
  color:#42589a;
}

.subtitle{
  margin-bottom:20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.pic{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.question{
  margin-top:20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.ques{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.content{
  text-align: left;
  margin-top: 90rpx;
  font-weight: 600;
}

.operate{
  margin-top: 100rpx;
  display: flex;
  align-items: center;
}

.attend{
  background-color: #5e7dbd;
  width:40%!important;
  color: white;
  font-size:medium;
  margin-bottom: 40rpx;
}

.answer{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  width: 90%;
  height:100%;
  margin: 0 5%;
  overflow: hidden;
  background-color: #fdfeff;
  border-radius: 8rpx;
  padding: 15rpx 15rpx 15rpx 15rpx;
}
 
.main{
  text-align: left;
}

.gap{
  height:30rpx;
}

.gap2{
  height:40rpx;
}

.chapter{
  display: flex;
  align-items: center;
}

.checkbox-group{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 20rpx;
}

.checkbox{
  margin-bottom:20rpx;
  text-align: left;
  display: flex;
  align-items: center;
}

.textarea {
  margin-top: 30rpx;
  background-color: rgba(153, 153, 153, 0.397);
  padding: 10rpx;
  font-size: 34rpx;
  width:350rpx;
  height: 40rpx;
  border-radius: 10px;
}

