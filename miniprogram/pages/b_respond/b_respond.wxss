/* pages/b_respond/b_respond.wxss */
.title{
  height:70px;
  width:100%;
  font-size:larger;
  display:flex;
  align-items:center;
  justify-content:center;
  font-weight:bold;
  color:#42589a;
}

.subtitle{
  margin-bottom:20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.pic{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.question{
  margin-top:30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.content{
  text-align: left;
  margin-top: 30rpx;
}

.answer{
  margin-top:60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input{
  border-radius: 5px;
  width: 150px;
  height: 2rem;
  min-height: 2rem;
  background-color: #ffffff;
  text-align:center;
  margin-bottom: 20rpx;
}

.operate{
  margin-top: 100rpx;
  display: flex;
  align-items: center;
}

.attend{
  background-color: #5e7dbd;
  width:30%!important;
  color: white;
  font-size: medium;
}

.back{
  background-color: rgb(161, 196, 228);
  width:30%!important;
  color:white;
  font-size: medium;
}

.nbanswer{
  margin-top: 50rpx;
}

.ans-title{
  color:#3d518a;
  font-weight: 600;
  font-size: medium;
  text-align: center;
  margin-bottom: 30rpx;
}

.ans-con{
  font-weight: 600;
  color:#3d518a;
  display: flex;
  flex-direction: column;
  align-items: center;
}