page{  
  height: 100%;  
  background-color: #F3F4F6;
} 

.logo{
  width: 200rpx;
  height: 200rpx;
  display:flex;

  justify-items:center;

}

.logo1{
  width: 150rpx;
  height: 150rpx;
  display:flex;
