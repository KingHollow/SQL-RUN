  justify-items:center;

 }

 .container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  padding: 0; 
  box-sizing: border-box; 
  background-color: #f2f2f2
 } 

 .box{
  background-color: #fff; 
  
  width:50%;

  margin-bottom: 0px;
  
  height: auto;
  color: black;

  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
 }

 .content{
  background-color: #fff; 
  
  width:85%;

  justify-items: center;
  display: flex;
  flex-direction: row;
  color: black;
