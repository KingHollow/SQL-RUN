/* pages/askme_detail/askme_detail.wxss */
.title{
  height: 70px;
  width: 100%;
  font-size: larger;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight:bold;
  color:#42589a;
  margin-top:30rpx;
 }

 page{  
  height: 100%;  
  background-color: #F3F4F6;
} 

.topView{
  width:100%;
  height:48px;
  display:flex;

}
.topChild{
  width:50%;
  height:48px;
  text-align: center;
  line-height: 3.4;
  font-size:15px;
  color:#333333;
}
/*点击时按钮状态*/
.active{
  color:#88ADDF;
  border-bottom:2px solid #88ADDF;
}


page{  
  height: 100%;  
  background-color: #F3F4F6;
} 


 .line { 
  width: 100%; 
  height: 2px; 
  background-color: #88aedf6c;
  margin-top: 1px; 
 } 


 .container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
  padding: 0; 
  box-sizing: border-box; 
  background-color: #f2f2f2
 } 

 .content{
  background-color: #fff; 
  
  width:85%;

  justify-items: center;
  display: flex;
  flex-direction: row;
  color: black;
  font-size: 20px;
  text-align: left;
  text-indent:2em;
 }

 .answer{
  background-color: #fff; 
  
  width:89%;

  justify-items: center;
  display: flex;
  flex-direction:column;
  color: black;
  font-size: 20px;
  
  
 }

 .text{
   font-size:  2.5vh;
   word-break: break-all;
   text-align: left;
  text-indent:2em;
  margin-top:10rpx;
  margin-bottom:10rpx;
 }

 .subtitle{
  height: 70px;
  width: 100%;
  font-size: medium;
  display: flex;
  align-items: center;
  justify-content: center;
  
  color:#5e7dbd;
 }

 .width{
   width: 100%;
   
   justify-content: center;
   
   display: flex;
   flex-direction: row;

 }

 .name{
   margin-top: 5rpx;
  color: #88addf;
  font-size: 17px;
  text-align: left;
  text-indent:1em;
 }
 .result{
  display:flex; 
  flex-direction:row;
  
  justify-content: right;
  justify-items: right;
  float: right;

 }


.btn{
  width:50%;
  height:48px;
  text-align: center;
  line-height: 3.4;
  font-size:17px;
  color:#6d6666;
}

.textarea{
  width: 600rpx;
  height: 300rpx;
  border-radius: 7px;
  background-color: #e5e5e5;
  font-size: 36rpx;
  padding-left: 25rpx;
  padding-top: 25rpx;
  padding-right: 25rpx;
  padding-bottom: 25rpx;
}

.gap { 
  width: 100%; 
  height: 20px;  
  margin-top: 1px; 
 } 

 /*按钮*/
.loginBtnView { 
  width: 100%; 
  height: auto; 
  margin-top: 30px; 
  margin-bottom: 0px; 
  padding-bottom: 0px; 
  display: flex;
  flex-direction: row;
 } 
   
 .register{
   margin-top: 20px;
   margin-bottom: 40px;
   font-size: 18px;
   width: 350rpx;
   height: auto;
   color: white;
   background-color: #88ADDF;
   text-align:center;
   justify-items: center;
 }
 