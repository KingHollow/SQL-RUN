<!--pages/s_checkchal/s_checkchal.wxml-->
<view class="title">
  审核题目
</view>

<view class="question">
  <view class="subtitle">
    <image class="pic" src="../../images/icon/lable.png"></image>
    单选题
  </view>
  <view class="content">
    {{content}}
  </view>
  <view class="radio-group">
    <view class="radio" wx:for="{{items}}">
      {{item.value}}
    </view>
  </view>
  <view class="answer">
    学生答案：{{answer}}
  </view>
</view>

<view class="operate">
  <button class="attend" bindtap="popConfirm">通过</button>
  <button class="back" bindtap="back">退回</button>
</view>
